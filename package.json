{
  "name": "react-vite-convexauth-siwe-appkit-tanto-widget",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "node setup.mjs",
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "vite",
    "dev:backend": "convex dev",
    "predev": "convex dev --until-success && convex dev --once --run-sh \"node setup.mjs --once\"",
    "build": "tsc -b && vite build",
    "lint": "tsc && eslint .  --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "generatekeys": "node generatekeys.mjs"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.87",
    "@reown/appkit": "^1.7.13",
    "@reown/appkit-adapter-wagmi": "^1.7.13",
    "@sky-mavis/tanto-widget": "^0.0.2",
    "@tanstack/react-query": "^5.83.0",
    "convex": "^1.25.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "siwe": "^3.0.0",
    "wagmi": "^2.15.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4"
  }
}
